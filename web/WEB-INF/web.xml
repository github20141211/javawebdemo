<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>CreateXML</servlet-name>
        <servlet-class>com.aflying.action.AjaxAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateXML</servlet-name>
        <url-pattern>/CreateXML</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCounter</servlet-name>
        <servlet-class>com.aflying.action.UpdateCounter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCounter</servlet-name>
        <url-pattern>/UpdateCounter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetPhoto</servlet-name>
        <servlet-class>com.aflying.action.GetPhoto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPhoto</servlet-name>
        <url-pattern>/GetPhoto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>YahooSearch</servlet-name>
        <servlet-class>com.aflying.action.YahooSearch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>YahooSearch</servlet-name>
        <url-pattern>/YahooSearch</url-pattern>
    </servlet-mapping>
</web-app>